<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="کجا? دنبال چی میگردی؟"
        android:layout_marginTop="10sp"
        android:textColor="#0422e6"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35sp"
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:hint="نام واحد"
        android:textStyle="bold"
        android:id="@+id/etVahedName"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColorHint="@color/clrEditTextHint"
        android:textColor="@color/clrEditText"
        android:background="@color/clrEditTextBackGround"
        android:textDirection="rtl"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35sp"
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:hint="موضوع واحد"
        android:textStyle="bold"
        android:id="@+id/etVahedSubject"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColorHint="@color/clrEditTextHint"
        android:textColor="@color/clrEditText"
        android:background="@color/clrEditTextBackGround"
        android:textDirection="rtl"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5sp"
        >
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:text="جستجو"
            android:textColor="#000000"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:text="انصراف"
            android:textColor="#000000"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:weightSum="10"
        >
        <LinearLayout
            android:id="@+id/llSearchByName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tvResultCountByName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نتیجه"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#448000"
                android:background="#dadada"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="بر حسب نام واحد"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#448000"
                android:background="#dadada"
                android:layout_weight="1"

                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            tools:context="com.ssaj.setak.yolrelease1.MainActivity"
            android:id="@+id/rvSarchResultsByName"
            android:visibility="gone"
            android:background="@color/clrRecyclerBack"
            android:layout_weight="5"
            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/llSearchBySubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tvResultCountBySubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نتیجه"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#448000"
                android:background="#dadada"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="بر حسب موضوع واحد"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#448000"
                android:background="#dadada"
                android:layout_weight="1"

                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            tools:context="com.ssaj.setak.yolrelease1.MainActivity"
            android:id="@+id/rvSarchResultsBySubject"
            android:visibility="gone"
            android:background="@color/clrRecyclerBack"
            android:layout_weight="5"

            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>